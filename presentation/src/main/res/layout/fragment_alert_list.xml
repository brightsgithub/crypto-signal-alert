<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/grey"
    >


    <Button
        android:id="@+id/clear_entries"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Clear Entries"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        />

    <Button
        android:id="@+id/create_entries"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Create Entries"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clear_entries"
        app:layout_constraintVertical_bias="0.0"
        />

    <Button
        android:visibility="gone"
        android:id="@+id/create_request"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Create Request"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_entries"
        app:layout_constraintVertical_bias="0.0"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/create_notification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="Create Notification"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_request"
        app:layout_constraintVertical_bias="0.0"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/create_notification"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="8dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp"
            >
            <TextView
                android:id="@+id/coin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Coin Name: Bitcoin"
                android:textSize="16sp"
                android:textStyle="bold"
                >
            </TextView>
            <TextView
                android:id="@+id/last_updated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Last Updated: 11/01/2019"
                android:textStyle="bold"
                >
            </TextView>
            <TextView
                android:id="@+id/current_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Current Price"
                >
            </TextView>
            <TextView
                android:id="@+id/price_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Price Target"
                >
            </TextView>
            <TextView
                android:id="@+id/price_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Price Direction"
                >
            </TextView>
            <TextView
                android:id="@+id/has_target_been_hit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="false"
                android:textStyle="bold"
                >
            </TextView>


        </LinearLayout>




    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>